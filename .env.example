# Linear API Configuration
LINEAR_API_KEY=your_linear_api_key

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO=your_repository_url
MAIN_BRANCH=main

# Docker Configuration
DOCKER_IMAGE=claude-code
WORKING_DIRECTORY=./repo

# LLM Configuration
LLM_API_KEY=your_anthropic_api_key
LLM_MAX_TOKENS=1000
CLAUDE_CODE_CONFIG=/home/user/.claude.json

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Custom Configuration
AI_TAG_NAME=AI

# Main Configuration
DEFAULT_POLL_INTERVAL=60
POLL_LOOKBACK_DAYS=0  # Only consider issues created/updated within this many days, if 0 then only issues created after the application was started will be considered
LOG_DIR=logs
LOG_LEVEL=INFO
LOG_FILE=app.log
PROCESSED_ISSUES_FILE=logs/issues.json